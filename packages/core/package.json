{
  "name": "@pidoc/core",
  "version": "0.15.0",
  "description": "Tools for generating a dynamic documentation experience like for docs.piral.io.",
  "app": "./src/index.html",
  "main": "./src/tools/index.js",
  "typings": "./src/scripts/types.ts",
  "scripts": {
    "check": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "piral-docs": "./bin/piral-cli.js",
    "pilet-docs": "./bin/pilet-cli.js"
  },
  "engines": {
    "node": ">=10.0"
  },
  "keywords": [
    "piral",
    "page",
    "documentation",
    "docs",
    "website",
    "modular",
    "smapiot"
  ],
  "pilets": {
    "externals": [
      "@pidoc/components",
      "piral-docs-tools/components"
    ],
    "files": [
      {
        "from": "./src/scaffold/index.tsx",
        "to": "./src/index.tsx",
        "template": true
      }
    ]
  },
  "author": "smapiot",
  "homepage": "https://docs.piral.io",
  "license": "MIT",
  "dependencies": {
    "@pidoc/components": "0.15.0",
    "chokidar": "^3.5.3",
    "keyword-extractor": "0.0.20",
    "markdown-it": "^12.0.6",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^7.1.0",
    "markdown-it-attrs": "^4.0.0",
    "markdown-it-container": "^3.0.0",
    "markdown-it-div": "^1.1.0",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-front-matter": "^0.2.3",
    "markdown-it-highlightjs": "^3.5.0",
    "markdown-it-include": "^2.0.0",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-replace-link": "^1.1.0",
    "markdown-it-smartarrows": "^1.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "markdown-it-task-checkbox": "^1.0.6",
    "markdown-it-video": "^0.6.3",
    "pug": "^3.0.2",
    "yaml": "^1.10.2",
    "yargs": "^15.4.1"
  },
  "peerDependencies": {
    "@pidoc/components": "*",
    "piral-cli": "*",
    "piral-core": "*",
    "react": "*",
    "react-dom": "*",
    "react-router-dom": "*"
  },
  "devDependencies": {
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "@types/react-router-dom": "^5.1.7",
    "@types/yargs": "^15.0.4",
    "flexsearch": "^0.6.32",
    "piral-cli": "latest",
    "piral-cli-webpack5": "latest",
    "piral-core": "latest",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0"
  }
}
