{
  "name": "@pidoc/core",
  "version": "0.18.0",
  "description": "Tools for generating a dynamic documentation experience like for docs.piral.io.",
  "app": "./src/index.html",
  "main": "./src/tools/index.js",
  "typings": "./src/scripts/types.ts",
  "scripts": {
    "check": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "piral-docs": "./bin/piral-cli.js",
    "pilet-docs": "./bin/pilet-cli.js"
  },
  "engines": {
    "node": ">=16.0"
  },
  "importmap": {
    "imports": {
      "@pidoc/components": "@pidoc/components",
      "piral-docs-tools/components": "@pidoc/components"
    },
    "inherit": [
      "piral-base",
      "piral-core"
    ]
  },
  "keywords": [
    "piral",
    "page",
    "documentation",
    "docs",
    "website",
    "modular",
    "smapiot"
  ],
  "author": "smapiot",
  "homepage": "https://pidoc.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/smapiot/pidoc.git"
  },
  "bugs": {
    "url": "https://github.com/smapiot/pidoc/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@asciidoctor/core": "^3.0.4",
    "@pidoc/components": "0.18.0",
    "chokidar": "^3.6.0",
    "keyword-extractor": "0.0.28",
    "markdown-it": "^14.1.0",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-container": "^4.0.0",
    "markdown-it-div": "^1.1.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-front-matter": "^0.2.4",
    "markdown-it-highlightjs": "^4.0.1",
    "markdown-it-include": "^2.0.0",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-replace-link": "^1.2.1",
    "markdown-it-smartarrows": "^1.0.1",
    "markdown-it-sub": "^2.0.0",
    "markdown-it-sup": "^2.0.0",
    "markdown-it-task-checkbox": "^1.0.6",
    "markdown-it-video": "^0.6.3",
    "pug": "^3.0.2",
    "yaml": "^2.4.1",
    "yargs": "^15.4.1"
  },
  "peerDependencies": {
    "@pidoc/components": "*",
    "piral-cli": "*",
    "piral-core": "*",
    "react": "*",
    "react-dom": "*",
    "react-router-dom": "*"
  },
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-router-dom": "^5",
    "@types/yargs": "^15.0.4",
    "flexsearch": "^0.6.32",
    "piral-cli": "1.5.4",
    "piral-cli-webpack5": "1.5.4",
    "piral-core": "1.5.4",
    "react": "^18",
    "react-dom": "^18",
    "react-router-dom": "^5"
  }
}
